<TelaEnvio>:
	BoxLayout:
    	orientation: 'vertical'
		BoxLayout:
			orientation: 'vertical'
			id: sensores
		Button:
			text: 'disconnect'
			on_release:
				app.disconnect ()
				root.manager.current = 'telaConexao'

<TelaConexao>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Escreva o IP'
        TextInput:
            id: ip
            text: '127.0.0.1'
        Label:
            text: 'Escreva a porta'
        TextInput:
            id: port
            text: '10000'
        Button:
            id: connect
            text: 'Conectar'
            on_release: 
                root.manager.current = 'telaEnvio'
                app.connect (ip.text, port.text)

<TelaErroConexao>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Erro no envio do pacote\nTente novamente'
		Button:
			text: 'Voltar'
			on_release:
				root.manager.current = 'telaConexao'

<telaErroEndereco>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Endere√ßo IP mal formatado\nTente novamente'
		Button:
			text: 'Voltar'
			on_release:
				root.manager.current = 'telaConexao'
